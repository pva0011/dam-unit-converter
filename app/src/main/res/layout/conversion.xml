<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/relLayout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"

    android:layout_height="60dp">

    <ImageView
        android:id="@+id/conversionIcon"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        app:srcCompat="@drawable/swap_horizontal_circle"/>

    <LinearLayout
        android:id="@+id/conversionLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/conversionIcon"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="20dp"
        android:layout_marginStart="4dp"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/conversioInput"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="12000g"
            android:textSize="16sp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" âžž "
            android:textSize="16sp"/>
        <TextView
            android:id="@+id/conversionOutput"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="12kg"
            android:textSize="16sp"/>
    </LinearLayout>

    <TextView
        android:id="@+id/timestamp"
        android:layout_marginStart="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/conversionLayout"
        android:layout_marginTop="4dp"
        android:text="2025/12/12 12:34:23"
        android:textSize="12sp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:layout_alignParentBottom="true"
        android:background="#C4C4C4"/>

    <ImageButton
        android:id="@+id/deleteButton"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_margin="18dp"
        android:src="@drawable/delete"/>

</RelativeLayout>
